Color: brightwhite          #ffffff              255        15
# }}}

Background: dark

# Default highlight groups {{{
verbatim
if !has('gui_running') && get(g:, '@optionprefix_transp_bg', 0)
endverbatim
    # Transparent background
    Normal none none
verbatim
else
endverbatim
    # Opaque background
    Normal brightwhite black
verbatim
endif
endverbatim

