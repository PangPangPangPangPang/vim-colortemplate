# Default highlight groups {{{
verbatim
if !has('gui_running') && get(g:, '@optionprefix_transp_bg', 0)
endverbatim
    # Transparent background
    Normal yellow none
verbatim
else
endverbatim
    # Opaque background
    Normal yellow darkblue
verbatim
endif
endverbatim

